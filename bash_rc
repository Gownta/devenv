# bash_rc

# Source callout
bash_source_callout () {
  if [ -f $1 ] ; then . $1 ; fi
}

bash_source_callout ~/.bash_aliases
bash_source_callout /etc/bashrc

# Variables
export PATH="$HOME/dev/bin:$PATH:$HOME/dev/bazel/bin"
export EDITOR=/usr/bin/vim

# Command edit mode
set -o vi

# History
shopt -s histappend
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=20000
HISTFILESIZE=50000
export HISTTIMEFORMAT="[ %y/%m/%d - %H:%M:%S ]  "
export HISTIGNORE="ls:cd ..:pwd:hostname"
